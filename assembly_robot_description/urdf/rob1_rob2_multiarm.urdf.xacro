<?xml version="1.0"?>
<robot 
    xmlns:xacro="http://ros.org/wiki/xacro" name="dual_robot">
    <xacro:include filename="$(find assembly_robot_description)/urdf/rob1_robot_driver.urdf.xacro" />
    <xacro:include filename="$(find assembly_robot_description)/urdf/rob2_robot_driver.urdf.xacro" />
    <xacro:include filename="$(find assembly_robot_description)/urdf/table.urdf.xacro" />

    <link name="world"/>

    <joint name="world_table" type="fixed">
        <parent link="world" />
        <child link="table" />
        <origin xyz="0 0.0 0.8" rpy="0.0 0.0 0" />
    </joint>

    <joint name = "rob1_robot_body" type = "fixed">
        <parent link = "table"/>
        <child link = "rob1_world"/>
        <axis xyz = "0 0 0"/>
        <origin xyz = "0 0.745 0.01" rpy = "0 0 0"/>
    </joint>

    <joint name = "rob2_robot_body" type = "fixed">
        <parent link = "table"/>
        <child link = "rob2_world"/>
        <axis xyz = "0 0 0"/>
        <origin xyz = "0 -0.685 0.01" rpy = "0 0 ${M_PI}"/>
    </joint>

    <link name="camera_center_1"/>

    <joint name="basler_joint" type="fixed">
        <parent link="rob1_real_ee_link" />
        <child link="camera_center_1" />
        <origin xyz="0 0.05785 0.0721" rpy="1.5707 0 0" />
    </joint>

    <link name="camera_center_2"/>

    <joint name="basler_joint_2" type="fixed">
        <parent link="rob2_real_ee_link" />
        <child link="camera_center_2" />
        <origin xyz="0 0.05785 0.0721" rpy="1.5707 0 0" />
    </joint>
</robot>
